@model List<CommonUtility.TrainerModel>
@{
    ViewBag.Title = "Search Trainer";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Trainer Information</h4><br />
        <div class="container">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table" id="Cust_Rec">
                        <thead style="background-color:#03a9f3">
                            <tr style="color:white">
                                <th>Trainer Name</th>
                                <th>Gender</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>JoinDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TrainerName</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Email</td>
                                    <td>@item.JoinDate.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
</div>
<script src="~/Content/Script/jquery-3.2.1.min.js"></script>
<script src="~/Content/Script/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Cust_Rec').DataTable({
            "bLengthChange": false,
            "pagingType": "full_numbers"
        });
    });
</script>

