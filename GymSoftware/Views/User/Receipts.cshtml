@model List<CommonUtility.CustomerRegistration>
@{
    ViewBag.Title = "Receipts";
    Layout = "~/Views/Shared/_GymLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Receipts</h4>
        <h6 class="card-subtitle">Can also search or sort by any column</h6>
        <table class="table" id="Cust_Rec">
            <thead class="tableheadcolor">
                <tr>
                    <th>Name</th>
                    <th>Payment</th>
                    <th>Date</th>                    
                    <th>ExpDate</th>
                    <th>Source</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="tbodybgcolor">
                @foreach (var item in Model)
            {
                    <tr class="gradeX">
                        <td>@item.Name</td>
                        <td>@item.Payment</td>
                        <td>@item.DateOfPayment.ToString("dd/MM/yyyy")</td>
                        <td>@item.ExpiryDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.Source</td>
                        <td>View History</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#Cust_Rec').DataTable({
            "bLengthChange": false,
            "pagingType": "full_numbers",
            "order": [],
        });
    });
</script>